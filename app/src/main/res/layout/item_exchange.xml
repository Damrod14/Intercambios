<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Título del intercambio -->
    <TextView
        android:id="@+id/exchange_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Título del intercambio"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red_festive"
        android:paddingEnd="8dp" />

    <!-- Nombre del intercambio -->
    <TextView
        android:id="@+id/exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del intercambio"
        android:textSize="16sp"
        android:textColor="@color/green_tree" />
</LinearLayout>