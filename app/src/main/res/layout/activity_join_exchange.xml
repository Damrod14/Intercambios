<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <!-- Título -->
    <TextView
        android:id="@+id/join_exchange_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse a un intercambio"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/red_festive"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <!-- Campo para ingresar la clave del intercambio -->
    <EditText
        android:id="@+id/join_exchange_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Clave del intercambio"
        android:padding="16dp"
        android:textSize="18sp"
        android:backgroundTint="@color/green_tree"
        android:layout_marginBottom="24dp" />

    <!-- Botón para confirmar -->
    <Button
        android:id="@+id/btn_confirm_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unirse"
        android:padding="16dp"
        android:textSize="20sp"
        android:backgroundTint="@color/red_festive"
        android:textColor="?attr/colorOnPrimary" />
</LinearLayout>