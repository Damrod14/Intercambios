<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_image"
    tools:context=".ViewExchangeDetailsActivity">

    <!-- Título del intercambio -->
    <TextView
        android:id="@+id/exchangeTitleTextView"
        android:text="Título del Intercambio"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/red_festive"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Detalles del intercambio -->
    <TextView
        android:id="@+id/exchangeDetailsTextView"
        android:text="Detalles del intercambio..."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exchangeTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Participantes -->
    <TextView
        android:id="@+id/participantsTextView"
        android:text="Participantes:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exchangeDetailsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para confirmar participación -->
    <Button
        android:id="@+id/confirmButton"
        android:text="Confirmar Participación"
        android:textSize="20sp"
        android:padding="12dp"
        android:backgroundTint="@color/red_festive"
        android:textColor="?attr/colorOnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/participantsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>